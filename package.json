{
  "name": "recreo-spot",
  "version": "1.0.0",
  "description": "An app to look for recreational entertainment POIs, based on Leaflet and OpenStreetMap",
  "main": "src/server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k41205/recreo-spot.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/src/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"tsc -p tsconfig.build.json --watch\" \"nodemon build/src/server.js\"",
    "clean": "rimraf dist",
    "clean-dev": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.dist.json && npm run copy-assets",
    "build-dev": "npm run clean-dev && tsc -p tsconfig.build.json && npm run copy-assets-dev",
    "copy-assets": "copyfiles -u 2 app/public/**/* dist/public && copyfiles -u 3 app/src/views/**/* dist/src/views",
    "copy-assets-dev": "copyfiles -u 2 app/public/**/* build/public && copyfiles -u 3 app/src/views/**/* build/src/views",
    "lint": "eslint . --ext .js",
    "test": "mocha --exit",
    "reset-dev-db": "node src/utils/reset-db.js --run --dev",
    "reset-prod-db": "node src/utils/reset-db.js --run --prod"
  },
  "author": "Giacomo Cavarretta",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.3.3",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.4",
    "firebase": "^10.11.1",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8",
    "hapi-auth-jwt2": "^10.5.1",
    "hapi-swagger": "^17.2.1",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/hapi__cookie": "^12.0.5",
    "axios": "^1.6.7",
    "chai": "^5.1.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "semantic-release": "^23.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
