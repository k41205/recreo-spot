<script type="module" src="/js/login.js"></script>

<section class="login-view">
  <a href="/"><h1 class="brand">Recreo Spot</h1></a>
  <h3 class="login-view__title">Get some fun tonight!</h3>
  <div class="login-view__container">
    <article class="auth">
      <h2 class="auth__title">Login</h2>
      <div class="auth__traditional">
        <form action="/authenticate" method="post" class="auth__form">
          <div class="auth__field"><label for="emailLog">Email:</label> <input type="email" id="emailLog" name="email" required /></div>
          <div class="auth__field"><label for="passwordLog">Password:</label> <input type="password" id="passwordLog" name="password" required /></div>
          <button class="auth__button" type="submit">Enter</button>
        </form>
      </div>
      <p>or</p>
      <div class="auth__google"><button id="google-login-btn">Login with Google</button></div>
    </article>
    <article class="login-view__image"><img src="images/login.png" alt="login img" /></article>
    <article class="signup">
      <h2 class="signup__title">Signup</h2>
      <form action="/signup" method="post" class="signup__form">
        <div class="signup__field"><label for="firstName">First name:</label> <input type="text" id="firstName" name="firstName" required /></div>
        <div class="signup__field"><label for="lastName">Last name:</label> <input type="text" id="lastName" name="lastName" required /></div>
        <div class="signup__field"><label for="username">Username:</label> <input type="text" id="username" name="username" required /></div>
        <div class="signup__field"><label for="email">Email:</label> <input type="email" id="email" name="email" required /></div>
        <div class="signup__field"><label for="password">Password:</label> <input type="password" id="password" name="password" required /></div>
        <button class="signup__button" type="submit">Register</button>
      </form>
    </article>
  </div>
</section>
